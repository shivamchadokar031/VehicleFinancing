                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:autoStart="true"
                        android:flipInterval="3000"
                        android:inAnimation="@android:anim/slide_in_left"
                        android:orientation="horizontal"
                        android:outAnimation="@android:anim/slide_out_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_centerInParent="true">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/grid1"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/screenshot_2023_0501_110455" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/screenshot_2023_0501_110435" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/slider_three_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/screenshot_2023_0501_110602" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img56"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/screenshot_2023_0501_110521" />
                    </ViewFlipper>


